<!DOCTYPE html>
<html>
<head>
  <title>OP Desk Dashboard</title>

  <style>
    * { box-sizing: border-box; font-family: "Segoe UI", Arial; }

    body {
      margin: 0;
      min-height: 100vh;
      background: #eef3f8;
    }

    /* Top Bar */
    .topbar {
      background: linear-gradient(135deg, #0a6ebd, #084f8c);
      color: white;
      padding: 16px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .topbar h1 { margin: 0; font-size: 22px; }
    .topbar a { color: white; text-decoration: none; font-weight: bold; }

    /* Layout */
    .layout {
      display: flex;
      max-width: 1400px;
      margin: 25px auto;
      padding: 0 20px;
      gap: 25px;
    }

    /* Sidebar */
    .sidebar {
      width: 260px;
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      padding: 20px;
      height: fit-content;
    }

    .sidebar h3 {
      margin-top: 0;
      color: #0a6ebd;
      margin-bottom: 20px;
    }

    .side-link {
      display: block;
      padding: 14px;
      margin-bottom: 12px;
      border-radius: 12px;
      background: #f4f9ff;
      text-decoration: none;
      color: #333;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.25s, transform 0.2s;
    }

    .side-link:hover,
    .side-link.active {
      background: #e1efff;
      color: #0a6ebd;
      transform: translateX(4px);
    }

    /* Main */
    .main {
      flex: 1;
    }

    /* Stats */
    .stats {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin-bottom: 25px;
    }

    .stat-card {
      background: white;
      padding: 22px;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.12);
      cursor: pointer;
      position: relative;
      transition:
        transform 0.25s ease,
        box-shadow 0.25s ease,
        background 0.25s ease;
    }

    .stat-card::after {
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      width: 6px;
      height: 100%;
      background: linear-gradient(180deg, #0a6ebd, #084f8c);
      border-radius: 0 16px 16px 0;
    }

    /* üî• HOVER EFFECT */
    .stat-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 18px 40px rgba(0,0,0,0.25);
      background: #f7fbff;
    }

    .stat-card:hover h2 {
      color: #084f8c;
    }

    .stat-card:hover p {
      color: #333;
    }

    .stat-card h2 {
      margin: 0;
      font-size: 26px;
      color: #0a6ebd;
    }

    .stat-card p {
      margin-top: 6px;
      font-size: 14px;
      color: #555;
    }

    /* Content Area */
    #content-area {
      background: white;
      padding: 25px;
      border-radius: 18px;
      box-shadow: 0 12px 30px rgba(0,0,0,0.15);
      min-height: 420px;
    }

    .welcome {
      text-align: center;
      padding: 70px 20px;
      color: #666;
    }

    @media (max-width: 900px) {
      .layout { flex-direction: column; }
      .sidebar { width: 100%; }
      .stats { grid-template-columns: repeat(2, 1fr); }
    }
  </style>
</head>

<body>

<div class="topbar">
  <h1>üè• OP Desk Dashboard</h1>
  <a href="/">Logout</a>
</div>

<div class="layout">

  <!-- Sidebar -->
  <div class="sidebar">
    <h3>Quick Menu</h3>

    <a class="side-link active" onclick="loadPage('/op/new', this)">‚ûï New OP Registration</a>
    <a class="side-link" onclick="loadPage('/op/today', this)">üìã Today OP Queue</a>
    <a class="side-link" onclick="loadPage('/op/history', this)">üìÇ OP History</a>
  </div>

  <!-- Main -->
  <div class="main">

    <!-- Stats -->
    <div class="stats">
      <div class="stat-card" onclick="loadPage('/op/list?status=ALL')">
        <h2>üìã</h2>
        <p>All OPs</p>
      </div>

      <div class="stat-card" onclick="loadPage('/op/list?status=Waiting')">
        <h2>üü¢</h2>
        <p>Waiting</p>
      </div>

      <div class="stat-card" onclick="loadPage('/op/list?status=In Consultation')">
        <h2>üü°</h2>
        <p>In Consultation</p>
      </div>

      <div class="stat-card" onclick="loadPage('/op/list?status=Completed')">
        <h2>üîµ</h2>
        <p>Completed</p>
      </div>
    </div>

    <!-- Dynamic Content -->
    <div id="content-area">
      <div class="welcome">
        <h2>Welcome to OP Desk</h2>
        <p>Select an option from the left menu to begin</p>
      </div>
    </div>

  </div>

</div>

<script>
  async function loadPage(url, el = null) {

    if (el) {
      document.querySelectorAll(".side-link")
        .forEach(l => l.classList.remove("active"));
      el.classList.add("active");
    }

    const separator = url.includes("?") ? "&" : "?";
    const finalUrl = url + separator + "partial=1";

    const res = await fetch(finalUrl);
    const html = await res.text();
    document.getElementById("content-area").innerHTML = html;
  }
</script>

</body>
</html>
