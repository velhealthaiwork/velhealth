<!DOCTYPE html>
<html>
<head>
  <title>OP List</title>

  <style>
    * { box-sizing: border-box; font-family: "Segoe UI", Arial; }
    body { margin: 0; background: #eef3f8; }

    .topbar {
      background: linear-gradient(135deg,#0a6ebd,#084f8c);
      color: white;
      padding: 16px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .container {
      max-width: 1300px;
      margin: 30px auto;
      padding: 0 20px;
    }

    h2 { color: #0a6ebd; }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit,minmax(280px,1fr));
      gap: 25px;
    }

    .card {
      background: white;
      padding: 22px;
      border-radius: 16px;
      box-shadow: 0 12px 28px rgba(0,0,0,0.15);
      position: relative;
    }

    .card::before {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      width: 6px;
      height: 100%;
      border-radius: 16px 0 0 16px;
    }

    .Waiting::before { background: #2ecc71; }
    .InConsultation::before { background: #f1c40f; }
    .Completed::before { background: #3498db; }

    .token {
      font-size: 22px;
      font-weight: bold;
      color: #0a6ebd;
    }

    .name {
      font-size: 16px;
      margin-top: 6px;
    }

    .status {
      font-size: 14px;
      color: #555;
      margin-top: 4px;
    }

    .empty {
      text-align: center;
      color: #777;
      margin-top: 40px;
    }
  </style>
</head>

<body>

<div class="topbar">
  <h1>ðŸ“‹ OP List - <%= status %></h1>
  <a href="/dashboard" style="color:white;text-decoration:none;">â¬… Back</a>
</div>

<div class="container">

  <% if (ops.length === 0) { %>
    <div class="empty">No OP records found</div>
  <% } else { %>

    <div class="grid">
      <% ops.forEach(o => { %>
        <div class="card <%= o.status.replace(' ','') %>">
          <div class="token">Token #<%= o.token_no %></div>
          <div class="name"><b><%= o.name %></b></div>
          <div class="status"><%= o.status %></div>
        </div>
      <% }) %>
    </div>

  <% } %>

</div>

</body>
</html>
