<!DOCTYPE html>
<html>
<head>
  <title>New OP Registration</title>

  <style>
    * {
      box-sizing: border-box;
      font-family: "Segoe UI", Arial, sans-serif;
    }

    body {
      margin: 0;
      min-height: 100vh;
      background: linear-gradient(135deg, #0a6ebd, #5fa8ff);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    /* Top Bar */
    .topbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: linear-gradient(135deg, #084f8c, #0a6ebd);
      color: white;
      padding: 16px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 4px 15px rgba(0,0,0,0.25);
      z-index: 10;
    }

    .topbar h2 {
      margin: 0;
      font-size: 20px;
      letter-spacing: 0.5px;
    }

    .topbar a {
      color: white;
      text-decoration: none;
      font-weight: bold;
    }

    /* Main Container */
    .op-container {
      background: white;
      width: 1000px;
      max-width: 95%;
      margin-top: 110px;
      padding: 35px 40px 40px;
      border-radius: 18px;
      box-shadow: 0 25px 55px rgba(0,0,0,0.3);
    }

    .section-title {
      font-size: 18px;
      color: #0a6ebd;
      margin-bottom: 18px;
      border-left: 5px solid #0a6ebd;
      padding-left: 10px;
    }

    /* Grid Layout */
    .form-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 22px 30px;
    }

    label {
      font-size: 14px;
      color: #333;
      font-weight: 600;
    }

    input, select, textarea {
      width: 100%;
      padding: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 14px;
      margin-top: 6px;
    }

    input:focus, select:focus, textarea:focus {
      outline: none;
      border-color: #0a6ebd;
      box-shadow: 0 0 0 2px rgba(10,110,189,0.15);
    }

    textarea {
      resize: none;
      height: 90px;
    }

    .full {
      grid-column: 1 / -1;
    }

    /* Slot Dropdown */
    .slot select option[disabled] {
      color: red;
      font-weight: bold;
    }

    /* Submit */
    .submit-area {
      margin-top: 35px;
      text-align: center;
    }

    .submit-btn {
      background: linear-gradient(135deg, #0a6ebd, #084f8c);
      color: white;
      border: none;
      padding: 14px 50px;
      font-size: 16px;
      border-radius: 30px;
      cursor: pointer;
      font-weight: bold;
      letter-spacing: 0.5px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.25);
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.35);
    }

    @media (max-width: 768px) {
      .form-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>
<%
  var safeSlotCount = (typeof slotCount !== "undefined") ? slotCount : {};
%>


  <!-- Top Bar -->
  <div class="topbar">
    <h2>üìù New OP Registration</h2>
    <a href="/dashboard">‚¨Ö Back to Dashboard</a>
  </div>

  <!-- Form Container -->
 <form class="op-container" method="POST" action="/op/new">


    <div class="section-title">Patient Details</div>

    <div class="form-grid">
      <div>
        <label>Patient Name</label>
        <input name="name" required>
      </div>

      <div>
        <label>Mobile Number</label>
        <input name="mobile" required>
      </div>

      <div>
        <label>Address</label>
        <input name="address">
      </div>

      <div>
        <label>Health / Scheme ID</label>
        <input name="scheme">
      </div>
    </div>

    <div class="section-title" style="margin-top:30px;">Medical & Appointment</div>

    <div class="form-grid">
      <div class="full">
        <label>Chief Complaint</label>
        <textarea name="complaint"></textarea>
      </div>

      <div>
        <label>Department</label>
        <select name="department" required>
          <option value="">Select Department</option>
          <% depts.forEach(d => { %>
            <option value="<%= d.id %>"><%= d.name %></option>
          <% }) %>
        </select>
      </div>

      <div>
        <label>Doctor</label>
        <select name="doctor" required>
          <option value="">Select Doctor</option>
          <% docs.forEach(d => { %>
            <option value="<%= d.id %>"><%= d.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="full slot">
        <label>Doctor Time Slot</label>
       <select name="time_slot" required>
  <option value="">-- Select Available Time Slot --</option>

  <%
    var slots = ['9-10','10-11','11-12','12-1','2-3','3-4','4-5','5-6'];
    slots.forEach(function(s) {
      var count = safeSlotCount[s] || 0;
  %>
    <option <%= count >= 5 ? 'disabled' : '' %>>
      <%= s %> ‚Äî <%= count >= 5 ? 'FULL' : 'Available' %>
    </option>
  <% }); %>
</select>


      </div>
    </div>

    <div class="submit-area">
      <button class="submit-btn">Proceed to Billing</button>
    </div>

  </form>

</body>
</html>
